= form_for @year do |f|
  - if @year.errors.any?
    #error_explanation
      %h2= "#{pluralize(@year.errors.count, "error")} prohibited this year from being saved:"
      %ul
        - @year.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.number_field :name
  .actions
    = f.submit 'Save'
